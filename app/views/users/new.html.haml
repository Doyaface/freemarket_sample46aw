.devise-content
  .main
    .signup-content
      %h2.signup-content__title 新規会員登録
      .signup-content__registers
        .register-btn
          = link_to new_user_registration_path, class: "register-btn--mail" do
            %i.far.fa-envelope
            %span メールアドレスで登録する
          = link_to user_facebook_omniauth_authorize_path, class: "register-btn--facebook" do
            %i.fab.fa-facebook-square
            %span Facebookで登録
          = link_to 'Googleで登録', user_google_oauth2_omniauth_authorize_path, class: "register-btn--google"
