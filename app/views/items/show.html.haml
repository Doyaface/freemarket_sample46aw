        = image_tag 'http://via.placeholder.com/60x60'
    .item-detail-content__detail-table
      %table
        %tbody
          %tr
            %th 出品者
            %td 
              -# メルカリ売り太郎
              #{@item.user.profile.nickname}
              .user-rating
                .user-rating__inner
                  %i.fas.fa-grin.good
                  %span 0
                .user-rating__inner
                  %i.fas.fa-meh.normal
                  %span 0
                .user-rating__inner
                  %i.fas.fa-frown-open.bad
                  %span 0
            %tr
              %th カテゴリ
              %td #{@item.category.name}
            %tr
              %th ブランド
              %td #{@item.item_detail.brand}
            %tr
              %th 商品のサイズ
              %td #{@item.item_detail.size.name}
            %tr
              %th 商品の状態
              %td #{@item.item_detail.condition.name}
            %tr
              %th 配送料の負担
              %td #{@item.shipping_origin.burden.name}
            %tr
              %th 配送の方法
              -# %td #{@item.shipping_origin.shipping_method}
            %tr
              %th 配送元地域
              %td #{@item.shipping_origin.prefecture.name}
            %tr
              %th 発送日の目安
              -# %td #{@item.shipping_origin.shipping_day}
  .item-price-box
    %span.item-price-box__price ¥ #{@item.price}
    %span.item-price-box__tax (税込)
    %span.item-price-box__shipping-fee 送料込み
