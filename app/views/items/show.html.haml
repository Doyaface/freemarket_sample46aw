.item-detail-container
  %h1 品名
  .item-detail-content
    .item-detail-content__photo
      -# = image_tag 'http://via.placeholder.com/225x300', class:'item-detail-content__photo--big'
      = image_tag = image_tag @item.item_images.first.url, size: :"225x300", class:'item-detail-content__photo--big'
      .item-detail-content__photo--small
        = image_tag @item.item_images[1].url, size: :"60x60"
